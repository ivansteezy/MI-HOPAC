<Page x:Class="MI_HOPAC.Views.Agenda"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MI_HOPAC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Agenda"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Viewbox HorizontalAlignment="Left" Margin="0 0 0 0" Grid.Column="0">
            <Calendar VerticalAlignment="Center" HorizontalAlignment="Left"></Calendar>
        </Viewbox>

        <ListView Grid.Column="1" x:Name="ListaCitas">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Paciente" Width="200" DisplayMemberBinding="{Binding Paciente}"/>
                    <GridViewColumn Header="Hora" Width="200" DisplayMemberBinding="{Binding Hora}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
